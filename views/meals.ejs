<%- include('partials/header'); -%>
<h1 class="pageTitle">Add New Meals</h1>

<div class="container">


<form action="/meals" method="post">

    <input class="form-control" type="text" name="mealName" placeholder="Name" id="mealName">

<select multiple class="form-control" name="dishes">

<% newDish.forEach(function(dish){ %>

  <option value="<%= dish.id %>"><%= dish.name %></option>
  <%  }); %>
</select>

<input type="date" name="dateEaten" placeholder="Date Eaten">
<button type="submit" name="newDish">Add Meal</button>

</form>
</div>

<%- include('partials/footer'); -%>
